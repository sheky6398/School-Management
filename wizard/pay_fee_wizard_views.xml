<odoo>
    <data>
        <record model="ir.ui.view" id="pay_fee_wizard_view_form">
            <field name="name">pay.fee.wizard.view.form</field>
            <field name="model">pay.fee.wizard</field>
            <field name="arch" type="xml">

                <form>
                    <group>
                        <group>
                            <field name="fee"/>
                        </group>

                    </group>
                    <footer>
                        <button string="Update Fees" type="object" name="pay_fee" class="btn-primary" />
                        <button string="Cancel" special="cancel" class="btn-primary"/>
                    </footer>

        
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_pay_fee_wizard">
            <field name="name">Fee</field>
            <field name="res_model">pay.fee.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    
    </data>
</odoo>

